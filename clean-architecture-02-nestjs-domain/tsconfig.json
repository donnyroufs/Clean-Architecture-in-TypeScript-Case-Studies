{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@domain/*": [
				"./src/domain/*"
			],
			"@application/*": [
				"./src/application/*"
			],
			"@infra/*": [
				"./src/infra/*"
			],
			"@webApi/*": [
				"./src/web-api/*"
			]
		},
		"incremental": true
	}
}